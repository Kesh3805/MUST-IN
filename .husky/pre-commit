#!/bin/sh
# ðŸ¶ MUST++ Pre-commit Hook
# Ensures code quality before every commit

echo "ðŸ” Running pre-commit checks..."

# Run lint-staged for Python files
npx lint-staged

# Check for any syntax errors in Python files
echo "âœ“ Checking Python syntax..."
python -m py_compile $(git diff --cached --name-only --diff-filter=ACM | grep '\.py$') 2>/dev/null || true

echo "âœ… Pre-commit checks passed!"
